{
    // General Settings
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "editor.insertSpaces": true,
    "editor.tabCompletion": "on",

    // Default for any filetype
    "editor.rulers": [
        100
    ],

    // Python Settings
    "[python]": {
        // In python using 80 characters per line is the standard.
        "editor.rulers": [
            79
        ],
    },

    // RST Settings
    "[restructuredtext]": {
       "editor.tabSize": 3,
    },
}
